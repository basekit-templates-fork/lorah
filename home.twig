{% extends "layout.twig" %}
{% block class %}bk-pt-home{% endblock %}
{% block content %}

<div class="hero">

    <!-- Theme Feature Widget -->
    {{widget('feature', 'featurehome', {
        'header': 'profile',
        'defaultBgImg': asset("images/feature.jpg"),
        'positionTopPercentage': '0',
        'showBtn': true,
        buttonText: "Lorem Ipsum"
    })|raw}}

    <!-- Header -->
    <div class="hero-header">

        <div class="flex-container">
            <div class="flex-item flex-nav">
                {{widget('extendednavigation', 'navigation', {"align":"center"})|raw}}
            </div>
        </div>

        <div class="companyname-default companyname-home">
            {{widget('companyname', 'companyname', {"business": "profile", "showTplWidget":"0"})|raw}}
        </div>

    </div>

    <!-- Feature Arrow -->
    <div class="feature-arrow">
        <a href="#main-scroll" class="feature-arrow-link  arrow-bounce"></a>
    </div>

</div>

<!-- Container -->
<div class="container">

    <!-- Page Content -->
    <section id="main-scroll" class="template-content">

        <!-- Main Widget Zone -->
        {{zone('main')|raw}}

    </section>
    <!-- End Page Content -->

</div>
<!-- End Container -->

<!-- Footer -->
<div class="template-footer">

    <!-- Footer Container -->
    <div class="flex-container">

        <!-- Page Content -->
        <div class="flex-item flex-profile1">
            {{widget('profile', 'address', { 'profileType':'address', 'address':'profile'})|raw}}
        </div>
        <div class="flex-item flex-profile2">
            {{widget('profile', 'socialicons', { 'profileType':'email', 'socialicons':'email'})|raw}}
        </div>

    </div>
    <!-- End Container -->
</div>

{% endblock %}

{% block bodyscripts %}

<!-- Smooth Scroll -->
<script nonce="{{ numberUsedOnce }}">
    $(document).ready(function(){

        $('a[href*=#]').bind('click', function(e) {
            e.preventDefault();

            var target = $(this).attr("href");

            $('html, body').stop().animate({ scrollTop: $(target).offset().top}, 1000, function() {
                location.hash = target;
            });

            return false;
        });

    });

</script>

{% endblock %}
